<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/black"
    tools:context=".TraditionalMades">

    <GridLayout
        android:id="@+id/specialistGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66">

        <!-- Traditional Mades Specialist 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image for Traditional Mades Specialist 1 -->
            <ImageView
                android:id="@+id/traditionalMadesSpecialist1Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tradsfemale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Traditional Mades Specialist 1 Info -->
            <TextView
                android:id="@+id/traditionalMadesSpecialist1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siti Zara"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/traditionalMadesSpecialist1Gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/traditionalMadesSpecialist1Image"
                app:layout_constraintTop_toTopOf="@id/traditionalMadesSpecialist1Image" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist1Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist1Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist1Name" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist1Area"
                android:layout_width="252dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:text="Kuih Making "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist1Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist1Gender" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist1Perks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mastery in Crafting Various Kuih Recipes"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist1Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist1Area" />

            <Button
                android:id="@+id/bookNowButtonTraditionalMades1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3"
                android:text="Book Now"
                android:textColor="#100F0F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist1Perks" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Traditional Mades Specialist 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image for Traditional Mades Specialist 2 -->
            <ImageView
                android:id="@+id/traditionalMadesSpecialist2Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tradsmale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Traditional Mades Specialist 2 Info -->
            <TextView
                android:id="@+id/traditionalMadesSpecialist2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Andika"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/traditionalMadesSpecialist2Gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/traditionalMadesSpecialist2Image"
                app:layout_constraintTop_toTopOf="@id/traditionalMadesSpecialist2Image" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist2Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Male"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist2Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist2Name" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist2Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Putu Piring "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist2Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist2Gender" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist2Perks"
                android:layout_width="257dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:text="Homemade recipes, Quality ingredients,Friendly Customer Interaction"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist2Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist2Area" />

            <Button
                android:id="@+id/bookNowButtonTraditionalMades2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3"
                android:text="Book Now"
                android:textColor="#100F0F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist2Perks" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Traditional Mades Specialist 3-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image for Traditional Mades Specialist 3 -->
            <ImageView
                android:id="@+id/traditionalMadesSpecialist3Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tradsfemale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Traditional Mades Specialist 3 Info -->
            <TextView
                android:id="@+id/traditionalMadesSpecialist3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suri Kamelia"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/traditionalMadesSpecialist3Gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/traditionalMadesSpecialist3Image"
                app:layout_constraintTop_toTopOf="@id/traditionalMadesSpecialist3Image" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist3Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist3Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist3Name" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist3Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lemang and Ketupat"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist3Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist3Gender" />

            <TextView
                android:id="@+id/traditionalMadesSpecialist3Perks"
                android:layout_width="243dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="Skillful Preparation of Traditional Lemang and Ketupat, Perfect for Festive Celebrations"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/traditionalMadesSpecialist3Name"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist3Area" />

            <Button
                android:id="@+id/bookNowButtonTraditionalMades3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3"
                android:text="Book Now"
                android:textColor="#100F0F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/traditionalMadesSpecialist3Perks" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </GridLayout>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="274dp"
        android:layout_height="41dp"
        android:text="Trad's Mades Specialists"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

</androidx.constraintlayout.widget.ConstraintLayout>

